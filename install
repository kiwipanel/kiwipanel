echo "âœ… Folders created successfully."

#Setting permissions
echo "ðŸ”§ Setting permissions..."
chown -R root:root /opt/kiwipanel
chmod -R 700 /opt/kiwipanel
chown -R root:root /var/backups/kiwipanel
chmod -R 700 /var/backups/kiwipanel
